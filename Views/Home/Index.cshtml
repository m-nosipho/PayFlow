@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #d4fc79, #96e6a1);
        font-family: 'Segoe UI', sans-serif;
    }

    .home-container {
        max-width: 700px;
        margin: 4rem auto;
        padding: 3rem;
        background-color: white;
        border-radius: 24px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .home-container h1 {
            font-size: 2.5rem;
            color: #4CAF50;
            margin-bottom: 1rem;
        }

        .home-container p {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 2rem;
        }

    .btn-start {
        background-color: #4CAF50;
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        transition: background 0.3s ease;
        text-decoration: none;
    }

        .btn-start:hover {
            background-color: #388E3C;
        }

    .emoji {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
</style>

<div class="home-container">
    <div class="emoji">🌱</div>
    <h1>Welcome to Pay Flow</h1>
    <p>Your simple, secure space to manage payments with ease and peace of mind.</p>
    <a href="/Auth/Login" class="btn-start">Get Started</a>
</div>
